package newpackage;

import java.util.Scanner;

public class NewClass {
    
    public static void main(String[] args){
        Scanner input = new Scanner(System.in);
        
        float media, nota1, nota2, nota3, nota4;
                
        System.out.print("Digite a Sua 1° Nota: ");
        nota1 = Float.parseFloat(input.nextLine());
        
        System.out.print("Digite a Sua 2° Nota: ");
        nota2 = Float.parseFloat(input.nextLine());
        
        System.out.print("Digite a Sua 3° Nota: ");
        nota3 = Float.parseFloat(input.nextLine());
        
        System.out.print("Digite a Sua 4° Nota: ");
        nota4 = Float.parseFloat(input.nextLine());
        
        media = ( nota1 + nota2 + nota3 + nota4 ) / 4;
        
        if (media >=6) {
             System.out.print("Media: " + media + " Você Foi Aprovado");
        } else {
             System.out.print("Media " + media + " Você Foi Reprovado");
        }
        
        
        
        
        
    }
}
